# Set Mod key to "Mod4" (usually the Super/Windows key)
set $mod Mod4
# manage Workspaces with multiple monitors
workspace 1 output $screen1
workspace 2 output $screen1
# ...
workspace 6 output $screen2
workspace 7 output $screen2

# Font settings
font pango:DejaVu Sans Mono 12

# Border settings
for_window [class="^.*"] border pixel 2

# Colors for window borders
client.focused          #4c7899 #285577 #ffffff #ffffff   #285577
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff

# Enable smart borders (only show borders with multiple windows)
smart_borders on

# Start XDG autostart .desktop files using dex
exec --no-startup-id dex --autostart --environment i3

# Start necessary applications on startup
exec --no-startup-id xbindkeys
exec --no-startup-id picom --config ~/.config/picom/picom.conf
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec --no-startup-id ./secondscreen.sh
exec xinput set-prop 14 "libinput Tapping Enabled" 1  # Or the command with the name

# PulseAudio volume controls
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Brightness controls
bindsym XF86MonBrightnessUp exec brightnessctl set +20%
bindsym XF86MonBrightnessDown exec brightnessctl set 20%-

# Floating window controls
floating_modifier $mod

# Move tiling windows via drag & drop
tiling_drag modifier titlebar

# Start a terminal
bindsym $mod+Return exec alacritty

# Kill focused window
bindsym $mod+q kill

# Open file manager
bindsym $mod+Shift+f exec --no-startup-id nemo

#Open telegram
bindsym $mod+t exec --no-startup-id flatpak run io.github.kukuruzka165.materialgram &

# Application launcher
bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+Shift+Return exec --no-startup-id rofi -show combi

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split containers
bindsym $mod+z split h
bindsym $mod+v split v

# Fullscreen mode
bindsym $mod+f fullscreen toggle

# Toggle the i3bar visibility

bindsym $mod+b bar mode toggle
# Layout controls
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling/floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Focus parent/child containers
bindsym $mod+a focus parent

# Scratchpad controls
bindsym $mod+n move scratchpad
bindsym $mod+Shift+n scratchpad show, floating disable

# manage Workspaces with multiple monitors
workspace 1 output $screen1
workspace 2 output $screen1
workspace 3 output $screen1
workspace 4 output $screen1
workspace 5 output $screen1
workspace 6 output $screen2
workspace 7 output $screen2
workspace 8 output $screen2
workspace 9 output $screen2

# Workspace controls
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Control+l workspace next_on_output
bindsym $mod+Control+h workspace prev_on_output


bindsym $mod+Control+Right workspace next
bindsym $mod+Control+Left workspace prev

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Reload and restart i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+q exec i3-msg exit

# Resize mode
mode "resize" {
    bindsym j resize shrink height 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize shrink width 10 px or 10 ppt
    bindsym h resize grow width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

bindsym $mod+equal resize grow width 10 px  

bindsym $mod+minus resize shrink width 10 px

# Status bar
# bar {
#     status_command i3status
#     output primary
#
#     tray_output primary
# }


bar {
    status_command i3status
    colors {
        background #f0f0f0
        statusline #000000
        separator  #cccccc

        focused_workspace  #ffffff #cccccc #000000
        active_workspace   #dddddd #bbbbbb #000000
        inactive_workspace #eeeeee #dddddd #666666
        urgent_workspace   #ffaaaa #ff4444 #000000
    }
}

exec --no-startup-id "setxkbmap -layout us,ara"
exec --no-startup-id "setxkbmap -option 'grp:alt_shift_toggle'"

exec --no-startup-id sh -c "setxkbmap -layout us,ara -option 'grp:alt_shift_toggle'"

bindsym Print exec maim -s -u | xclip -selection clipboard -t image/png -i

# Shortcuts to switch between VGA monitor and Tablet (Deskreen)
bindsym $mod+Shift+p exec --no-startup-id ~/start_tablet.sh
bindsym $mod+Shift+o exec --no-startup-id ~/stop_tablet.sh
